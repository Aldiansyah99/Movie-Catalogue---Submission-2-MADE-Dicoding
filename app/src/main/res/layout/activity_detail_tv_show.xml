<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activity.DetailMovieActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@android:color/white">

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/img_detail_cover_tvShow"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:background="@color/colorPrimaryDark" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/gradient_cover"
            app:layout_constraintBottom_toBottomOf="@id/img_detail_cover_tvShow"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/img_detail_photo_tvShow"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="24dp"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_detail_cover_tvShow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_detail_cover_tvShow"
            tools:background="@android:color/white" />

        <TextView
            android:id="@+id/tv_detail_title_tvShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/tv_judul_film"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/img_detail_photo_tvShow"
            app:layout_constraintTop_toBottomOf="@+id/img_detail_cover_tvShow" />

        <TextView
            android:id="@+id/tv_detail_genre_tvShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/tv_genre_film"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toRightOf="@+id/img_detail_photo_tvShow"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_title_tvShow" />

        <TextView
            android:id="@+id/tv_detail_rating_tvShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_rating"
            android:drawableStart="@drawable/ic_star"
            android:paddingStart="2dp"
            android:paddingEnd="4dp"
            android:text="@string/tv_0_0"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/img_detail_photo_tvShow"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_genre_tvShow" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_desc"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_detail_photo_tvShow">

            <TextView
                android:id="@+id/tv_overview_tvShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_overview"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/img_garis"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_garis"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                app:layout_constraintLeft_toRightOf="@+id/tv_overview_tvShow"
                app:layout_constraintRight_toLeftOf="@+id/tv_runtime_tvShow"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_runtime"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toTopOf="@+id/tv_runtime_tvShow"
                app:layout_constraintLeft_toRightOf="@+id/img_garis"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_runtime_tvShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_runtime"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/img_garis"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_runtime" />

            <TextView
                android:id="@+id/tv_detail_description_tvShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/tv_description"
                android:textColor="@android:color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_garis" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
